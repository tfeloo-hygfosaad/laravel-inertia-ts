{
  "name": "@tfeloo-hygfosaad/laravel-inertia-ts",
  "version": "1.0.0",
  "private": true,
  "description": "Laravel 10 with Breeze (Inertia, Vue w/ SSR), TS and ESLint",
  "scripts": {
    "prepare": "husky install",
    "dev": "vite",
    "build": "vite build && vite build --ssr",
    "lint": "eslint . --ext js,jsx,ts,tsx --config .eslintrc.js --no-eslintrc --ignore-path .gitignore --ignore-pattern public"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --config .eslintrc.js --no-eslintrc --ignore-path .gitignore --ignore-pattern public",
      "git add"
    ]
  },
  "dependencies": {
    "@inertiajs/vue3": "^1.0.0",
    "@tailwindcss/forms": "^0.5.3",
    "@vue/server-renderer": "^3.2.31",
    "axios": "^1.3.4",
    "laravel-vite-plugin": "^0.7.2",
    "tailwindcss": "^3.2.1",
    "vite": "^4.0.0",
    "vite-plugin-eslint": "^1.8.1",
    "vue": "^3.2.41",
    "@vitejs/plugin-vue": "^4.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "autoprefixer": "^10.4.12",
    "eslint": "^8.36.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "postcss": "^8.4.18",
    "typescript": "^5.0.2"
  }
}
